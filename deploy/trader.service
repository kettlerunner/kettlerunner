[Unit]
Description=Kettlerunner FastAPI (Gunicorn)
After=network.target

[Service]
User=kettlerunner
WorkingDirectory=/opt/kettlerunner
EnvironmentFile=/opt/kettlerunner/.env
ExecStart=/opt/kettlerunner/venv/bin/gunicorn -c gunicorn_conf.py app.main:app
Restart=always
RestartSec=3

[Install]
WantedBy=multi-user.target
